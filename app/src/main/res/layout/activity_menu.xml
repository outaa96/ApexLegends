<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homee"
    tools:context=".menu">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_basic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:fontFamily="@font/kanit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="ข้อมูลพื้นฐาน"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:typeface="normal"
                app:iconPadding="0dp"
                app:iconTint="@color/black"
                app:strokeColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:fontFamily="@font/kanit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="แผนที่"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:typeface="normal"
                app:iconPadding="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_character"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:fontFamily="@font/kanit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="ตัวละคร"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:typeface="normal"
                app:iconPadding="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:fontFamily="@font/kanit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="โหมดการเล่น"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:typeface="normal"
                app:iconPadding="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_weapon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:fontFamily="@font/kanit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="อาวุธ"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:typeface="normal"
                app:iconPadding="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_htplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:fontFamily="@font/kanit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="วิธีการเล่น"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:typeface="normal"
                app:iconPadding="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>